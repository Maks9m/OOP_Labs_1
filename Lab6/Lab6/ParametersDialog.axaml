<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls"
    x:Class="Lab6.ParametersDialog"
    Title="Введення параметрів" 
    Width="400" Height="500"
    WindowStartupLocation="CenterOwner"
    CanResize="False"
    RequestedThemeVariant="Light">
    <StackPanel Margin="20" Spacing="15">
        <TextBlock Text="Параметри генерації даних" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
        
        <StackPanel Spacing="5">
            <TextBlock Text="Кількість точок (nPoints):"/>
            <controls:NumericUpDown x:Name="NPointsInput" Minimum="5" Maximum="100" Value="10" Increment="1" FormatString="0"/>
        </StackPanel>
        
        <StackPanel Spacing="5">
            <TextBlock Text="Мінімум X (xMin):"/>
            <controls:NumericUpDown x:Name="XMinInput" Minimum="-1000" Maximum="1000" Value="0" Increment="1" FormatString="0"/>
        </StackPanel>
        
        <StackPanel Spacing="5">
            <TextBlock Text="Максимум X (xMax):"/>
            <controls:NumericUpDown x:Name="XMaxInput" Minimum="-1000" Maximum="1000" Value="100" Increment="1" FormatString="0"/>
        </StackPanel>
        
        <StackPanel Spacing="5">
            <TextBlock Text="Мінімум Y (yMin):"/>
            <controls:NumericUpDown x:Name="YMinInput" Minimum="-1000" Maximum="1000" Value="0" Increment="1" FormatString="0"/>
        </StackPanel>
        
        <StackPanel Spacing="5">
            <TextBlock Text="Максимум Y (yMax):"/>
            <controls:NumericUpDown x:Name="YMaxInput" Minimum="-1000" Maximum="1000" Value="100" Increment="1" FormatString="0"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10" Margin="0,20,0,0">
            <Button x:Name="OkButton" Content="Виконати" Width="120" Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="Скасувати" Width="120" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
