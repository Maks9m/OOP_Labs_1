<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Module1.Dialog1"
    Title="Виберіть значення" Width="300" Height="150"
    RequestedThemeVariant="Light">
    <StackPanel Margin="20">
        <TextBlock Text="Оберіть число:" />
        <Slider x:Name="NumberSlider" Minimum="1" Maximum="100" Value="1" TickFrequency="1"
            IsSnapToTickEnabled="True" />
        <TextBlock Text="{Binding Value, ElementName=NumberSlider}" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="OkButton" Content="Так" Click="OkButton_Click" Margin="0,0,10,0" />
            <Button Name="CancelButton" Content="Відміна" Click="CancelButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>